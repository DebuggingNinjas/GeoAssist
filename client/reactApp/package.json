{
  "name": "reactapp",
  "private": true,
  "proxy": "http://localhost:5050/",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "// Individual component tests": "----------------------------",
    "test:card": "jest src/components/tests/unit/Card.test.jsx",
    "test:view": "jest src/components/tests/unit/View.test.jsx",
    "test:admin": "jest src/components/tests/unit/admin/Admin.test.jsx",
    "test:login": "jest src/components/tests/unit/auth/Login.test.jsx",
    "test:signup": "jest src/components/tests/unit/auth/Signup.test.jsx",
    "// Test groups": "----------------------------",
    "test:unit": "jest src/components/tests/unit",
    "test:integration": "jest src/components/tests/integration",
    "test:system": "jest src/components/tests/system --config=jest.config.cjs",
    "// Focused test groups": "----------------------------",
    "test:auth": "jest src/components/tests/unit/auth",
    "test:admin-related": "jest \"src/components/tests/(unit|integration)/.*[aA]dmin.*\"",
    "test:user-journey": "jest src/components/tests/system/EndToEndUserJourney.test.jsx",
    "// Debug options": "----------------------------",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
    "test:verbose": "jest --verbose",
    "test:clear-cache": "jest --clearCache",
    "// Full test suite with detailed reporting": "----------------------------",
    "test:full": "jest --coverage --verbose"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-brands-svg-icons": "^6.7.2",
    "@fortawesome/free-regular-svg-icons": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@tailwindcss/vite": "^4.0.9",
    "firebase": "^11.5.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.2.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@eslint/js": "^9.17.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "axios": "^1.7.9",
    "babel-jest": "^29.7.0",
    "babel-plugin-transform-import-meta": "^2.3.2",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.0.9",
    "vite": "^6.0.5"
  }
}
